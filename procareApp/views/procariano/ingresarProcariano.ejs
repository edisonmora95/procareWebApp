<!DOCTYPE html>
<html>
	<head>
		<title>Procare</title>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<!--Materializecs-->
		<link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
		<link rel="stylesheet" type="text/css" href='/bower_components/materialize/bin/materialize.css'>
		<link rel="stylesheet" type="text/css" href="/stylesheets/ingresarProcarianoStyles.css">
	</head>
	<body>
		<header>
			<nav>
				<a href="#" data-activates="slide-out" class="button-collapse show-on-large"><i class="material-icons">menu</i></a>
				<a href="" class="brand-logo">Procare</a>
				<ul id="slide-out" class="side-nav">
			    <li>
			    	<div class="userView">
				      <div class="background">
				        
				      </div>
				      <a href="#!user"></a>
				      <a href="#!name"><span class="white-text name">John Doe</span></a>
				      <a href="#!email"><span class="white-text email">jdandturk@gmail.com</span></a>
				    </div>
			    </li>
			    <li><a href="#!"><i class="material-icons">cloud</i>First Link With Icon</a></li>
			    <li><a href="#!">Second Link</a></li>
			    <li><div class="divider"></div></li>
			    <li><a class="subheader">Subheader</a></li>
			    <li><a class="waves-effect" href="#!">Third Link With Waves</a></li>
			  </ul>
			</nav>
		</header>
		<main class="container" id="main">
			<div class="row">
				<form class="col s12">
					<!--Row nombres y apellidos-->
					<div class="row row-nombres-apellidos">
						<div class="input-field col s6">
							<input type="text" name="nombres" id="nombres" v-model="procariano.nombre">
							<label for="nombres">Nombres</label>
						</div>
						<div class="input-field col s6">
							<input type="text" name="apellidos" id="apellidos" v-model="procariano.apellido">
							<label for="apellidos">Apellidos</label>
						</div>
					</div>
					<!--Row cedula y fecha nacimiento-->
					<div class="row row-cedula-fecha">
						<div class="input-field col s6">
							<input type="date" name="fecha-nacimiento" id="fecha-nacimiento" class="datepicker" v-model="procariano.fechaNacimiento">
							<label for="fecha-nacimiento">Fecha de nacimiento</label>
						</div>
						<div class="input-field col s6">
							<input type="text" name="cedula" id="cedula" v-model="procariano.cedula">
							<label for="cedula">Cedula</label>
						</div>
					</div>
					<!--Row direccion y email-->
					<div class="row row-direccion-email">
						<div class="input-field col s6">
							<input type="text" name="direccion" id="direccion" v-model="procariano.direccion">
							<label for="direccion">Dirección</label>
						</div>
						<div class="input-field col s6">
							<input type="email" name="email" id="email" v-model="procariano.email">
							<label for="email">Email</label>
						</div>
					</div>
					<!--Row celular y convencional-->
					<div class="row row-celular-convencional">
						<div class="input-field col s6">
							<input type="tel" name="celular" id="celular" v-model="procariano.celular">
							<label for="celular">Celular</label>
						</div>
						<div class="input-field col s6">
							<input type="tel" name="convencional" id="convencional" v-model="procariano.convencional">
							<label for="convencional">Convencional</label>
						</div>
					</div>
					<!--Row genero y tipo-->
					<div class="row row-genero-tipo">
						<div class="input-field col s6">
							<select id="select-genero">
								<option value="" disabled selected></option>	
								<option value="1">Masculino</option>
								<option value="2">Femenino</option>
							</select>
							<label>Género</label>
						</div>
						<div class="input-field col s6">
							<select id="select-tipo-procariano">
								<option value="" disabled selected></option>	
								<option value="1">Chico de Formación</option>
								<option value="2">Caminante</option>
								<option value="3">Pescador</option>
								<option value="4">Pescador consagrado</option>
								<option value="5">Sacerdote</option>
							</select>
							<label>Tipo</label>
						</div>
					</div>
					<!--Chico formacion-->
					<div class="row row-chico-formacion" v-show="procariano.tipo=='Chico de Formación'">
						<div class="input-field col s6">
							<input type="text" name="colegio" id="colegio" v-model="procariano.colegio">
							<label for="colegio">Colegio</label>
						</div>
						<div class="input-field col s6">
							<select id="select-grupo-formacion">
								<option></option>
							</select>
							<label>Grupo de Formación</label>
						</div>
					</div>
					<!--Caminante-->
					<div class="row row-caminante" v-show="procariano.tipo=='Caminante'">
						<div class="input-field col s6">
							<input type="text" name="universidad" id="universidad" v-model="procariano.universidad">
							<label for="universidad">Universidad</label>
						</div>
						<div class="input-field col s6">
							<input type="text" name="trabajo" id="trabajo" v-model="procariano.trabajo">
							<label for="trabajo">Trabajo</label>
						</div>
						<div class="input-field col s12">
							<select id="select-grupo-caminante">
								<option></option>
							</select>
							<label>Grupo de caminantes</label>
						</div>
					</div>
					<!--Pescador-->
					<div class="row row-pescador" v-show="procariano.tipo=='Pescador'">
						<div class="input-field col s6">
							<input type="text" name="universidad" id="universidad" v-model="procariano.universidad">
							<label for="universidad">Universidad</label>
						</div>
						<div class="input-field col s6">
							<input type="text" name="trabajo" id="trabajo" v-model="procariano.trabajo">
							<label for="trabajo">Trabajo</label>
						</div>
						<div class="input-field col s12">
							<select>
								<option></option>
							</select>
							<label>Grupo de pescadores</label>
						</div>
					</div>
					<!--Sacerdote-->
					<div class="row row-sacerdote" v-show="procariano.tipo=='Sacerdote'">
						<div class="input-field col s6">
							<input type="text" name="parroquia" id="parroquia" v-model="procariano.parroquia">
							<label for="parroquia">Parroquia</label>
						</div>
						<div class="input-field col s6">
							<input type="date" name="fecha-ordenacion" id="fecha-ordenacion" class="datepicker" v-model="procariano.fechaOrdenacion">
							<label for="fecha-ordenacion">Fecha de ordenación</label>
						</div>
					</div>
					<!--Botones-->
					<div class="row row-botones">
						<a class="btn waves-effect waves-light btn-cancelar" type="button" name="action">Cancelar<a>
						<a class="btn waves-effect waves-light pull right" type="submit" name="action">Crear<a>
					</div>
				</form>
				
			</div>
		</main>
		<footer>
			<script src='/bower_components/jquery/dist/jquery.js'></script>
			<script src='/bower_components/materialize/bin/materialize.js'></script>
			<script src='/bower_components/vue/dist/vue.js'></script>
			<script src="/js/procariano/ingresarProcarianoScript.js"></script>
		</footer>
	</body>
</html>